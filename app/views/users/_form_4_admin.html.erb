<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :role %><br>
    <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}, {} , {:class => 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="actions">
     <%= f.hidden_field(:id) %>
     <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" %>
    <%= link_to 'Cancel', users_path, class: "btn btn-default pull-right" %>&nbsp;&nbsp;
    <%= f.submit "Save" , class: "btn btn-success pull-right" %> &nbsp;&nbsp;
   
    
  </div>
<% end %>
